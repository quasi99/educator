<!DOCTYPE html>
<html>
  <head>
    <title>Educator</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'Educator', root_path, class: 'navbar-brand' %>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= t('menu.languages.lang') %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to t('menu.languages.en'), change_locale_path(:en) %>
              </li>
              <li>
                <%= link_to t('menu.languages.pt-BR'), change_locale_path(:"pt-BR") %>
              </li>
            </ul>
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to t('menu.new_article'), new_article_path %></li>
        </ul>
      </div>
    </div>

    <div class="container">
      <% flash.each do |key, value| %>
      <div class="alert alret-<%= key %>">
        <%= value %>
      </div>
      <% end %>

      <div class="page-header">
        <h1><%= yield :page_header %></h1>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
